@model string

<div class="row distanceTextBoxSearchWithDataTable">
    <div class="col-sm-7 padingTextBoxSearchWithDataTable">
        <label>
            تعداد کل محصولات فروشگاه <span>
                @Model
            </span> محصول می باشد
        </label>
    </div>
    <div class="col-sm-1 padingTextBoxSearchWithDataTable">
        <label class="pull-left">
            جستجو
        </label>
    </div>
    <div class="col-sm-4">

        @using (Ajax.BeginForm(actionName: MVC.admin.Product.ActionNames.DataProduct, controllerName: MVC.admin.Product.Name, ajaxOptions: new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, LoadingElementId = "divLoadingTable", UpdateTargetId = "table-Content" }))
        {
            <input type="search" id="term" name="term" class="pull-right styleTextBoxSearch" data-autocomplete-url="@Url.Action(MVC.admin.Product.ActionNames.GetProductNameAutocomplete, MVC.admin.Product.Name)" />
        }
    </div>
</div>