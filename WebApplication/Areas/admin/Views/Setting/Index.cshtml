@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Main.cshtml";
}

@Html.Partial(partialViewName: MVC.admin.Setting.Views._solidHeaderElmah)

<br />
<div class="row" id="loadingElement">
    <div class="col-md-12" id="ElementLoading">
        <img src="@Url.Content("~/Content/Images/Main/loadingAnimation.gif")" class="center-block" />
    </div>
</div>


<div id="result">
</div>

@section Scripts
{
<script type="text/javascript" lang="en">
    $(document).ready(function () {
        $("#loadingElement").show();
        $.ajax({
            cache: false,
            type: "GET",
            url: "@Url.Action(MVC.admin.Setting.ActionNames.ReadElmahException, MVC.admin.Setting.Name)",
            data: null,
            success: function (data) {
                $("#result").html(data);
                $("#loadingElement").hide();
            },
            error: function (xhr, ajaxOptions, thrownError) {
                $("#loadingElement").hide();
                alert('Failed to retrieve Elamh error.');
            }
        });
    });
</script>

}