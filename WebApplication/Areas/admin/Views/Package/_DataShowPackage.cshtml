@using eShop.WebApplication.DomainClasses.ViewModelClasses

@model List<ProductShow_Create_Package_ViewModel>


@foreach (var item in Model)
{
    <tr>
        <td>
            <div class="ckbox ckbox-primary">
                <input type="checkbox" id="@MvcHtmlString.Create("checkBox" + @item.Id)"
                       value="@item.Id/@item.Price"
                       name="checkboxSelectProduct" />
                <label for="@MvcHtmlString.Create("checkBox" + @item.Id)"></label>
            </div>
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @string.Format("{0} تومان", item.Price)
        </td>
        <td>
            @item.Time
        </td>
        <td>
            @item.Company_Name
        </td>
        <td>
            @Html.ActionLink(linkText: "مشاهده اطلاعات بیشتر",actionName: MVC.admin.Product.ActionNames.DetailsProduct,controllerName: MVC.admin.Product.Name,routeValues: new { id = item.Id },htmlAttributes: new { @class = "decoration_a" })
        </td>
    </tr>
}