

<div id="CommentDetails">
    <br />
    @Html.Partial(MVC.Account.Views._SolidHeaderMangementUser, "نظرات ارسالی من در سیستم")
    <br />
    <div class="row">
        <div class="baseInfoUserHeaderWithGlyphiconTop">
            <span class="glyphicon glyphicon-comment" style="margin:1px auto; font-size:33px;"></span>
        </div>
        <div class="baseInfoUserHeaderWithGlyphiconBottom">
            نظرات ارسالی من
        </div>
    </div>
    <br />
    <div class="row">


        <div class="col-md-12">
            <table class="table" style="font:normal 14px eramFont;">
                <thead>
                    <tr>
                        <th>
                            توضیحات
                        </th>
                        <th style="text-align:center">
                            تاریخ ارسال نظر
                        </th>
                    </tr>
                </thead>
                <tbody id="MoreInfoDiv">
                    @Html.Action(MVC.Comment.ActionNames.GetCommentUserInfo, MVC.Comment.Name, new { page = 0 })
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <br />
        <div class="col-md-12">
            <div class="col-md-10" id="Destination" style="border-left:1px solid #eee; border-top:1px solid #eee; padding-top:15px;">
                <button type="button" class="btn btn-primary col-md-12" id="moreInfoButton" data-loadaddress="@Url.Action(MVC.Comment.ActionNames.GetCommentUserInfo, MVC.Comment.Name)">
                    <span>بازیابی  دیگر نظرات</span>
                </button>
            </div>
            <div class="col-md-2" style="border-top:1px solid #eee;padding-top:15px !important;">
                <img id="ProgressDiv" src="@Url.Content("~/Content/Images/Main/loadingAnimation.gif")" class="center-block" style="display:none" />
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" lang="en">
    $("#CommentDetails #moreInfoButton").InfiniteScroll({
        moreInfoDiv: '#CommentDetails #MoreInfoDiv',
        progressDiv: '#CommentDetails #ProgressDiv',
        loadInfoUrl: $('#CommentDetails #moreInfoButton').data('loadaddress'),
        loginUrl: '/Account/login',
        errorHandler: function () {
            $("#CommentDetails #moreInfoButton").hide();
            $('#CommentDetails').hide();
            alert("در پرداش در خواست خطایی ایجاد شده است ");
        },
        completeHandler: function () {
        },
        noMoreInfoHandler: function (data) {
            $("#CommentDetails #moreInfoButton").hide();
            $('#MoreInfoDiv').html(" ");
        }
    });
</script>
